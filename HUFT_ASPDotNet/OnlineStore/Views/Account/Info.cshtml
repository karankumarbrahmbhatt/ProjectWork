@model OnlineStore.Models.ViewModel.AccountInfoViewModel
@{
    ViewData["Title"] = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User information</h1>
<div class="row">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Surname</th>
                <td>@Model.Surname</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Account creation time</th>
                <td>@Model.CreationTime</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            @if (Model.IsAdmin == true)
            {
                <tr>
                    <th>Admin page</th>
                    <td><a href="/admin/products" class="btn btn-primary">Admin page</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <a asp-action="UserPurchases" class="btn btn-primary">Purchases</a>
    </div>
</div>
<hr />