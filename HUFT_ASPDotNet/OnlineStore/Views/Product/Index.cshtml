@model OnlineStore.Models.ViewModel.ProductViewModel
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script>
    $("#arate").click(function () {
        let rate = $("#rate").val();
        this.href = this.href.replace("#", rate);
    });
</script>
<!-- Single Product Details Start -->
<div class="small-container single-product product-1">
    <div class="row">
        <div class="col-2">
            <img src="~/image/@Model.Product.Image.Path" width="100%" id="productImg1">

        </div>

        <div class="col-2">
            <h4>@Model.Product.Name</h4>
            
            <h4>$ @Model.Product.Price</h4>
            <select id="color1">
                <option value="" disabled selected>Select Color</option>
                <option value="Red">Red</option>
                <option value="Blue">Blue</option>
                <option value="Green">Green</option>
                <option value="Yellow">Yellow</option>
            </select>
            <select id="size1">
                <option value="" disabled selected>Select Size</option>
                <option value="XL">XL</option>
                <option value="L">L</option>
                <option value="M">M</option>
                <option value="S">S</option>
            </select>
            <br />
            <input type="number" value="1" id="qty1">
            <br />
           
            @if (User.Identity.IsAuthenticated)
            {
                @if (Model.InShopingCart)
                {
                    <label>Product added to the cart</label>
                }
                else
                {
                    <a class="btn btn-success" href="/api/cart/add/@Model.Product.Id?redirect=@Context.Request.Path">Add to cart</a>
                }
            }
            else
            {
                <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-success">Add to cart</a>
            }
            <h3>Product Details <i class="fa fa-indent"></i></h3> <br>
           
            <p>@Model.Product.Description</p>
            <br />
                <li>
                    Brand: @Model.Product.Producer </li>
                <li>Category: @Model.Product.Category.Name </li>
                <li>Model: @Model.Product.Model</li>
            
            
        </div>

    </div>
</div>

