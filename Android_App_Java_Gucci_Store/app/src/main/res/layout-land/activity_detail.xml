<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="#ffffff">

        <TextView
            android:id="@+id/nameDetail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="#000000"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text="PRODUCT"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageDetail"
            android:layout_width="wrap_content"
            android:layout_height="348dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="75dp"
            app:srcCompat="@drawable/blazer_zoom" />

        <TextView
            android:id="@+id/nameDetailo"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="440dp"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text="Wool Dress with Contrast Trim"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="470dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/abeezee"
            android:text="A red wool dress with ivory detail that trims the silhouette. The Epilogue collection conveys the idea that fashion's old rules should be left behind and pieces should be timelessâ€“not just in fashion for one season."
            android:textAlignment="center" />


        <ImageView
            android:id="@+id/addItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="610dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/removeItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="610dp"
            android:src="@drawable/circle" />

        <Button
            android:id="@+id/btnDetailAddToCart"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="690dp"
            android:backgroundTint="@color/black"
            android:text="Add To Cart" />

        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="690dp"
            android:backgroundTint="@color/black"
            android:text="Buy Now" />

        <TextView
            android:id="@+id/priceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="560dp"
            android:text="$2750"
            android:textColor="#343434"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="620dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnDetailHome"
            android:layout_width="76dp"
            android:layout_height="70dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_baseline_home_24" />

        <ImageButton
            android:id="@+id/btnDetailCart"
            android:layout_width="85dp"
            android:layout_height="71dp"
            android:layout_marginLeft="650dp"
            android:src="@drawable/ic_baseline_shopping_cart_24" />

    </androidx.cardview.widget.CardView>
</LinearLayout>